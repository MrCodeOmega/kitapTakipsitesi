@model YorumSilModel


@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";

}

<form class="form-group">
    <div class="form-group">
        <label>Yazar:</label>
        <span asp-validation-for="@Model.Yorum" class="text-danger"></span>
        <input asp-for="@Model.Yorum" class="form-control" />
    </div>
    <div class="form-group">
        <label>Yorum Yapan:</label>
        <span asp-validation-for="@Model.YorumAdi" class="text-danger"></span>
        <input asp-for="@Model.YorumAdi" class="form-control" />
    </div>
    <div class="form-group">
        <label>YorumId:</label>
        <span asp-validation-for="@Model.Id" class="text-danger"></span>
        <input asp-for="@Model.Id" class="form-control" />
    </div>

    <a class="btn btn-danger" asp-action="SilYorum" asp-controller="Admin" asp-route-id="@Model.Id">Yorumu Sil</a>

</form>